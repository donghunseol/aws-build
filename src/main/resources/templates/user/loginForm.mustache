{{> layout/header}}

<div class="mx-100 bg-light d-flex justify-content-center" style="padding: 30px 150px;">
    <div class="container bg-white rounded-3 border border-white p-3" style="margin: 0px 60px;">
        <h2>로그인</h2>

        <div class="btn-group">
            <button onclick="location.href='#'" type="button"
                    class="btn btn-primary">개인회원
            </button>
            <button onclick="location.href='#'" type="button"
                    class="btn btn-primary">기업회원
            </button>
        </div>

        <form action="../index/index.html">
            <div class="mb-3 mt-3">
                <label for="email">ID:</label>
                <input type="email" class="form-control" id="email" placeholder="Enter userid" name="userId">
            </div>

            <div class="mb-3">
                <label for="pwd">비밀번호:</label>
                <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="password">
            </div>
            <button type="submit"
                    class="btn btn-primary">Submit
            </button>
        </form>
    </div>
</div>

{{> layout/footer}}